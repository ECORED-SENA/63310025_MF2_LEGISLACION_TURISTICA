include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.png", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            
                            .card-body

                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('play', 'Introducción', 'main.html#page/introduccion/')
                                    +navTemaItem('1', 'Sector turístico', 'main.html#page/sector/')
                                    +navTemaItem('2', 'Zonas de desarrollo turístico', 'main.html#page/zonas/')
                                    +navTemaItem('3', 'Establecimientos hoteleros', 'main.html#page/establecimientos/')
                                    +navTemaItem('4', 'Agencias de viajes', 'main.html#page/agencias/')
                                    +navTemaItem('5', 'Transporte de pasajeros', 'main.html#page/transporte/')
                                    +navTemaItem('6', 'Establecimientos de gastronomía', 'main.html#page/establecimientos2/')
                                    +navTemaItem('7', 'Empresas captadoras de ahorro para viajes', 'main.html#page/empresas/')
                                    +navTemaItem('8', 'Sistema de tiempo compartido', 'main.html#page/sistema/')
                                    +navTemaItem('9', 'Operadores profesionales de congresos, ferias y convenciones', 'main.html#page/operadores/')
                                    +navTemaItem('question', 'Actividad didáctica', 'main.html#page/actividad-1/')

        section#mainContent         
            #introduccion
                include pages/intro.pug
            #tema-1
                include pages/1-tema.pug
            #tema-2
                include pages/2-tema.pug
            #tema-3
                include pages/3-tema.pug
            #tema-4
                include pages/4-tema.pug
            #tema-5
                include pages/5-tema.pug
            #tema-6
                include pages/6-tema.pug
            #tema-7
                include pages/7-tema.pug
            #tema-8
                include pages/8-tema.pug
            #tema-9
                include pages/9-tema.pug
            #evaluacion
                include pages/actividad-1.pug
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug

        +creditosFooter("assets/images/logos/senaLogo.svg")

        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")